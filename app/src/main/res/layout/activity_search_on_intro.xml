<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:orientation="vertical">
        <TextView
            android:id="@+id/skip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="26dp"
            android:gravity="end"
            android:text="@string/skip"
            android:textAllCaps="true"
            android:textColor="@color/theme"
            android:textSize="16sp" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/ic_fresh" />

        <TextView
            fontPath="fonts/Nunito-Bold.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:text="@string/fresh"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryText"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:text="@string/fresh_description"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/ed_search"
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/button_border_theme_color"
            android:ems="10"
            android:hint="search places "
            android:inputType="textPersonName" />

        <EditText
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/button_border_theme_color"

            android:id="@+id/ed_dish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:ems="10"
            android:hint="what you wanna eat today"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button2"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:onClick="callSearchPage"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@color/colorGreen"
            android:text="@string/submit"
            android:textColor="@color/colorTextWhite" />
    </LinearLayout>


</LinearLayout>